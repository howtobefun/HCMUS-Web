<div class="main-slider-container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 relative">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold text-gray-800 border-l-4 pl-4 border-red-500">Top chuyên mục</h2>
        <div class="space-x-2">
            <button class="prev bg-gray-300 text-white p-1 rounded-xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            <button class="next bg-gray-400 text-white p-1 rounded-xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Main Slider Container -->
    <div class="main-slider grid grid-cols-2 gap-4 w-full">
        <!-- First Article: 50% width -->
        <div class="flex-shrink-0 col-span-1">
            <div class="relative rounded-lg w-full h-full p-4 flex">
                <div class="relative w-full flex-grow">
                    <img src="<%= articles[0].topImage %>" alt="<%= articles[0].title %>" class="object-cover w-full h-full rounded-lg">
                    <!-- Categories -->
                    <div class="absolute top-0 left-0 p-2">
                        <div class="flex flex-wrap gap-2 justify-start">
                            <% articles[0].categories.forEach(category => { %>
                            <span class="bg-white opacity-70 px-2 py-1 rounded-md cursor-pointer text-sm text-black">
                                #<%= category %>
                            </span>
                            <% }); %>
                        </div>
                    </div>
                    <!-- Title and Content -->
                    <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-[calc(100%-1rem)] bg-white opacity-70 rounded-lg mb-2">
                        <div class="px-4 py-2 bg-white opacity-90 rounded-lg space-y-3">
                            <h3 class="font-semibold text-lg text-center text-black line-clamp-1">
                                <%= articles[0].title %>
                            </h3>
                            <p class="text-sm text-black line-clamp-3">
                                <%= articles[0].content %>
                            </p>
                            <p class="text-sm text-black">
                                <%= articles[0].date %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Remaining Articles: 50% width grid -->
        <div class="col-span-1">
            <div class="slider-wrapper">
                <div class="grid grid-cols-2 gap-4">
                    <% articles.forEach((article, index) => { %>
                    <div class="flex-shrink-0 article-item <%= index >= 4 ? 'hidden' : '' %>">
                        <div class="grid grid-cols-10 gap-4 w-full h-full p-4">
                            <!-- Image Section (3/10 of the width) -->
                            <div class="col-span-3 relative flex flex-col justify-between">
                                <img src="<%= article.topImage %>" alt="<%= article.title %>" class="object-cover w-full h-full rounded-lg">
                            </div>

                            <!-- Text Section (7/10 of the width) -->
                            <div class="col-span-7 flex flex-col justify-between space-y-2">
                                <div>
                                    <h3 class="font-semibold text-lg text-black line-clamp-1">
                                        <%= article.title %>
                                    </h3>
                                    <p class="text-sm text-black line-clamp-3">
                                        <%= article.content %>
                                    </p>
                                </div>
                                <p class="text-sm text-black">
                                    <%= article.date %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
