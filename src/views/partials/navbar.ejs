<script>
    let currentSet = 0;
    const wrapper = document.querySelector('.tag-wrapper');
    const totalSets = 3;
    const prevBtn = document.querySelector('.tag-prev');
    const nextBtn = document.querySelector('.tag-next');
    const searchInput = document.querySelector('input[type="text"]'); // Add reference to input

    function updateButtons() {
        prevBtn.disabled = currentSet === 0;
        nextBtn.disabled = currentSet === totalSets - 1;
        prevBtn.style.opacity = currentSet === 0 ? '0.5' : '1';
        nextBtn.style.opacity = currentSet === totalSets - 1 ? '0.5' : '1';
        wrapper.style.transform = `translateX(-${currentSet * 33.333}%)`;
    }

    nextBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        if (currentSet < totalSets - 1) {
            currentSet++;
            updateButtons();
        }
        searchInput.focus(); // Keep focus on input
    });

    prevBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        if (currentSet > 0) {
            currentSet--;
            updateButtons();
        }
        searchInput.focus(); // Keep focus on input
    });

    // Initialize button states
    updateButtons();
</script>