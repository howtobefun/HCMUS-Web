<div class="max-w-[90rem] mx-auto px-4 sm:px-6 lg:px-8 py-6 relative">
    <h2 class="text-2xl font-semibold text-gray-800 border-l-4 pl-4 border-red-500">Mới nhất</h2>
    <div class="col-span-1 my-auto overflow-hidden mt-4">
        <div class="slider-wrapper top-category-slider flex overflow-hidden">
            <!-- Fixed grid layout: 2 columns and multiple rows -->
            <div id="articles-container" class="grid grid-cols-2 gap-4 w-full">
                <% const itemsPerPage=10; const totalPages=Math.ceil(articles.length / itemsPerPage); %>
                    <% articles.slice(0, itemsPerPage).forEach((article)=> { %>
                        <a href="/article/<%= article._id %>"
                            class="block hover:shadow-xl transition-shadow duration-300">
                            <div class="article-item bg-white shadow-lg rounded-lg border-gray-100 border">
                                <div class="grid grid-cols-10 gap-2 w-full h-full p-4">
                                    <!-- Image -->
                                    <div class="col-span-5 relative flex flex-col justify-between">
                                        <div class="relative w-full h-48 overflow-hidden">
                                            <img src="<%= article.image %>" alt="<%= article.title %>"
                                                class="object-cover w-full h-full rounded-lg">
                                            <div class="absolute top-1 left-0">
                                                <% if (article.isPremium) { %>
                                                    <svg class="w-6 h-6 text-yellow-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        fill="currentColor" viewBox="0 0 24 24">
                                                        <path d="M11 9a1 1 0 1 1 2 0 1 1 0 0 1-2 0Z" />
                                                        <path fill-rule="evenodd"
                                                            d="M9.896 3.051a2.681 2.681 0 0 1 4.208 0c.147.186.38.282.615.255a2.681 2.681 0 0 1 2.976 2.975.681.681 0 0 0 .254.615 2.681 2.681 0 0 1 0 4.208.682.682 0 0 0-.254.615 2.681 2.681 0 0 1-2.976 2.976.681.681 0 0 0-.615.254 2.682 2.682 0 0 1-4.208 0 .681.681 0 0 0-.614-.255 2.681 2.681 0 0 1-2.976-2.975.681.681 0 0 0-.255-.615 2.681 2.681 0 0 1 0-4.208.681.681 0 0 0 .255-.615 2.681 2.681 0 0 1 2.976-2.975.681.681 0 0 0 .614-.255ZM12 6a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z"
                                                            clip-rule="evenodd" />
                                                        <path
                                                            d="M5.395 15.055 4.07 19a1 1 0 0 0 1.264 1.267l1.95-.65 1.144 1.707A1 1 0 0 0 10.2 21.1l1.12-3.18a4.641 4.641 0 0 1-2.515-1.208 4.667 4.667 0 0 1-3.411-1.656Zm7.269 2.867 1.12 3.177a1 1 0 0 0 1.773.224l1.144-1.707 1.95.65A1 1 0 0 0 19.915 19l-1.32-3.93a4.667 4.667 0 0 1-3.4 1.642 4.643 4.643 0 0 1-2.53 1.21Z" />
                                                    </svg>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Title and Content -->
                                    <div class="col-span-5 flex flex-col justify-around space-y-4">
                                        <h3 class="font-semibold text-lg text-black line-clamp-1">
                                            <%= article.name %>
                                        </h3>
                                        <div class="flex flex-row space-x-2">
                                            <div
                                                class="p-1 flex text-sm justify-center border border-black rounded-xl w-[32%]">
                                                <%= article.category[0] %>
                                            </div>
                                            <!-- Child categories -->
                                            <% if (article.category && article.category.length> 1) { %>
                                                <% article.category.slice(1).forEach(childCategory=> { %>
                                                    <span
                                                        class="text-sm text-cyan-500 flex justify-center items-center">
                                                        #<%= childCategory %>
                                                    </span>
                                                    <% }); %>
                                                        <% } %>
                                        </div>
                                        <p class="text-sm text-gray-500 line-clamp-3">
                                            <%= article.abstract || article.content %>
                                        </p>
                                        <div class="flex justify-between items-center">
                                            <span class="text-sm text-gray-500">
                                                <%= article.author %> | <%= article.publishedAt ?
                                                        article.publishedAt.split(',')[1]?.trim() || article.publishedAt
                                                        : 'No date' %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <% }); %>
            </div>
        </div>
        <!-- Pagination -->
        <div id="pagination" class="flex justify-center space-x-2 mt-6">
            <% for (let i=1; i <=totalPages; i++) { %>
                <button data-page="<%= i %>"
                    class="pagination-btn px-4 py-2 border border-gray-300 bg-white rounded hover:bg-gray-100">
                    <%= i %>
                </button>
                <% } %>
        </div>
    </div>
</div>

<script>
    // Pagination logic
    document.addEventListener('DOMContentLoaded', () => {
        const itemsPerPage = 10;
        const articles = <%= JSON.stringify(articles) %>;
        const totalPages = Math.ceil(articles.length / itemsPerPage);

        const articlesContainer = document.getElementById('articles-container');
        const paginationButtons = document.querySelectorAll('.pagination-btn');

        // Function to update the page view
        const renderPage = (page) => {
            const startIndex = (page - 1) * itemsPerPage;
            const paginatedArticles = articles.slice(startIndex, startIndex + itemsPerPage);

            // Clear current articles
            articlesContainer.innerHTML = '';

            // Render new articles
            paginatedArticles.forEach((article) => {
                const articleHTML = `
                    <div class="article-item bg-white shadow-lg rounded-lg border-gray-100 border">
                        <div class="grid grid-cols-10 gap-2 w-full h-full p-4">
                            <div class="col-span-5 relative flex flex-col justify-between">
                                <div class="relative w-full h-48 overflow-hidden">
                                    <img src="${article.image}" alt="${article.title}"
                                        class="object-cover w-full h-full rounded-lg">
                                </div>
                            </div>
                            <div class="col-span-5 flex flex-col justify-around space-y-4">
                                <h3 class="font-semibold text-lg text-black line-clamp-1">
                                    ${article.title}
                                </h3>
                                <p class="text-sm text-black line-clamp-5">
                                    ${article.content}
                                </p>
                                <p class="text-sm text-cyan-500">
                                    ${article.date}
                                </p>
                            </div>
                        </div>
                    </div>
                `;
                articlesContainer.innerHTML += articleHTML;
            });
        };

        // Function to update active page button style
        const updateActivePage = (activePage) => {
            paginationButtons.forEach(button => {
                button.classList.remove('bg-blue-400', 'text-white');
                button.classList.add('bg-white', 'text-black');
            });
            const activeButton = document.querySelector(`[data-page='${activePage}']`);
            activeButton.classList.remove('hover:bg-gray-100');
            activeButton.classList.add('bg-blue-400', 'text-white');
        };

        // Add click event to pagination buttons
        paginationButtons.forEach((button) => {
            button.addEventListener('click', (e) => {
                const page = parseInt(e.target.getAttribute('data-page'), 10);
                renderPage(page);
                updateActivePage(page);
            });
        });

        // Initial page load
        renderPage(1);
        updateActivePage(1);
    });
</script>