<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 relative">
    <h2 class="text-2xl font-semibold text-gray-800 border-l-4 pl-4 border-red-500">Mới nhất</h2>
    <div class="col-span-1 my-auto overflow-hidden mt-4">
        <div class="slider-wrapper top-category-slider flex overflow-hidden">
            <!-- Fixed grid layout: 2 columns and multiple rows -->
            <div id="articles-container" class="grid grid-cols-2 gap-4 w-full">
                <% 
                    const itemsPerPage = 6;
                    const totalPages = Math.ceil(articles.length / itemsPerPage);
                %>
                <% articles.slice(0, itemsPerPage).forEach((article) => { %>
                    <div class="article-item bg-white shadow-lg rounded-lg border-gray-100 border">
                        <div class="grid grid-cols-10 gap-2 w-full h-full p-4">
                            <!-- Image -->
                            <div class="col-span-5 relative flex flex-col justify-between">
                                <div class="relative w-full h-48 overflow-hidden">
                                    <img src="<%= article.topImage %>" alt="<%= article.title %>"
                                        class="object-cover w-full h-full rounded-lg">
                                </div>
                            </div>
                            <!-- Title and Content -->
                            <div class="col-span-5 flex flex-col justify-around space-y-4">
                                <h3 class="font-semibold text-lg text-black line-clamp-1">
                                    <%= article.title %>
                                </h3>
                                <p class="text-sm text-black line-clamp-5">
                                    <%= article.content %>
                                </p>
                                <p class="text-sm text-cyan-500">
                                    <%= article.date %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <!-- Pagination -->
        <div id="pagination" class="flex justify-center space-x-2 mt-6">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <button data-page="<%= i %>" class="pagination-btn px-4 py-2 border border-gray-300 bg-white rounded hover:bg-gray-100">
                    <%= i %>
                </button>
            <% } %>
        </div>
    </div>
</div>

<script>
    // Pagination logic
    document.addEventListener('DOMContentLoaded', () => {
        const itemsPerPage = 6;
        const articles = <%- JSON.stringify(articles) %>;
        const totalPages = Math.ceil(articles.length / itemsPerPage);

        const articlesContainer = document.getElementById('articles-container');
        const paginationButtons = document.querySelectorAll('.pagination-btn');

        // Function to update the page view
        const renderPage = (page) => {
            const startIndex = (page - 1) * itemsPerPage;
            const paginatedArticles = articles.slice(startIndex, startIndex + itemsPerPage);

            // Clear current articles
            articlesContainer.innerHTML = '';

            // Render new articles
            paginatedArticles.forEach((article) => {
                const articleHTML = `
                    <div class="article-item bg-white shadow-lg rounded-lg border-gray-100 border">
                        <div class="grid grid-cols-10 gap-2 w-full h-full p-4">
                            <div class="col-span-5 relative flex flex-col justify-between">
                                <div class="relative w-full h-48 overflow-hidden">
                                    <img src="${article.topImage}" alt="${article.title}"
                                        class="object-cover w-full h-full rounded-lg">
                                </div>
                            </div>
                            <div class="col-span-5 flex flex-col justify-around space-y-4">
                                <h3 class="font-semibold text-lg text-black line-clamp-1">
                                    ${article.title}
                                </h3>
                                <p class="text-sm text-black line-clamp-5">
                                    ${article.content}
                                </p>
                                <p class="text-sm text-cyan-500">
                                    ${article.date}
                                </p>
                            </div>
                        </div>
                    </div>
                `;
                articlesContainer.innerHTML += articleHTML;
            });
        };

        // Function to update active page button style
        const updateActivePage = (activePage) => {
            paginationButtons.forEach(button => {
                button.classList.remove('bg-blue-500', 'text-white');
                button.classList.add('bg-white', 'text-black');
            });
            const activeButton = document.querySelector(`[data-page='${activePage}']`);
            activeButton.classList.remove('hover:bg-gray-100');
            activeButton.classList.add('bg-blue-500', 'text-white');
        };

        // Add click event to pagination buttons
        paginationButtons.forEach((button) => {
            button.addEventListener('click', (e) => {
                const page = parseInt(e.target.getAttribute('data-page'), 10);
                renderPage(page);
                updateActivePage(page);
            });
        });

        // Initial page load
        renderPage(1);
        updateActivePage(1);
    });
</script>
