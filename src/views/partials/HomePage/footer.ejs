<footer class="bg-gray-800 text-white mt-6">
    <div class="max-w-[90rem] mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Logo and Info -->
            <div class="col-span-1">
                <h3 class="text-lg font-semibold mb-4">G News</h3>
                <p class="text-gray-400 text-sm">
                    Trang tin tức hàng đầu cung cấp thông tin chính xác và đáng tin cậy.
                </p>
            </div>

            <!-- Quick Links -->
            <div class="col-span-1">
                <h3 class="text-lg font-semibold mb-4">Liên kết nhanh</h3>
                <ul class="space-y-2">
                    <li><a href="/" class="text-gray-400 hover:text-white">Trang chủ</a></li>
                    <li><a href="/trend" class="text-gray-400 hover:text-white">Xu hướng</a></li>
                    <li><a href="/newest" class="text-gray-400 hover:text-white">Mới nhất</a></li>
                </ul>
            </div>

            <!-- Categories -->
            <div class="col-span-1">
                <h3 class="text-lg font-semibold mb-4">Danh mục</h3>
                <ul class="space-y-2">
                    <% if (locals.categories && categories.length> 0) { %>
                        <% categories.filter(cat=> !cat.parent).slice(0, 4).forEach(category => { %>
                            <li>
                                <a href="/categories/<%= category.name %>" class="text-gray-400 hover:text-white">
                                    <%= category.name %>
                                </a>
                            </li>
                            <% }) %>
                                <% } %>
                </ul>
            </div>

            <!-- Contact Info -->
            <div class="col-span-1">
                <h3 class="text-lg font-semibold mb-4">Liên hệ</h3>
                <ul class="space-y-2 text-gray-400">
                    <li class="flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span>227 Nguyễn Văn Cừ, Quận 5, TP.HCM</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                        </svg>
                        <span>contact@news.com</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z">
                            </path>
                        </svg>
                        <span>(+84) 123 456 789</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-gray-800 mt-12 pt-8">
            <p class="text-center text-gray-400 text-sm">
                © <%= new Date().getFullYear() %> G News. Đã đăng ký bản quyền.
            </p>
        </div>
    </div>
</footer>